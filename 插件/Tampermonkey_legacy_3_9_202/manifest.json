{
   "manifest_version": 2,
   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
   "minimum_chrome_version": "20.0.0.0",
   "offline_enabled": true,
   "content_scripts": [ {
      "js": [ "registry.js",
              "prepare.js",
              "convert.js",
              "helper.js",
              "xmlhttprequest.js",
              "environment.js",
              "content.js" ],
      "matches": [ "file://*", "http://*/*", "https://*/*" ],
      "match_about_blank": true,
      "run_at": "document_start",
      "all_frames": true
   } ],
   "browser_action": {
      "default_icon": "images/icon_grey.png",
      "default_title": "Tampermonkey",
      "default_popup": "action.html"
   },
   "icons": { "32": "images/icon.png",
   	      "48": "images/icon48.png",
       	     "128": "images/icon128.png" },
   "incognito": "split",
   "name": "Tampermonkey Legacy",
   "short_name": "TM Legacy",
   "version": "3.9.202",
   "description": "The most popular userscript manager for Blink-based browsers",
   "update_url": "https://tampermonkey.net/crx/tm_legacy_3_9_202.xml",
   "default_locale": "en",
   "background": {
       "page": "background.html"
   },
   "options_page": "options.html",
   "permissions": [ "notifications",
                    "unlimitedStorage",
                    "tabs",
                    "idle",
                    "management",
                    "webNavigation",
                    "webRequest", "webRequestBlocking",
                    "storage",
                    "syncFileSystem",
                    "chrome://favicon/",
                    "clipboardWrite",
                    "<all_urls>" ],
   "optional_permissions" : [ "contentSettings", "downloads" ]
}
