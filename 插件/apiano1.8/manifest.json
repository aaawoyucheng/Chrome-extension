{
  "name": "Apizza",
  "description": "apizza.cc 网站发送请求插件。1.8版本，修复不能上传文件的bug。",
  "version": "1.7",
  "permissions": [
    "tabs","*://*/*"  
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["styles.css"],
      "js": ["jquery-1.10.2.min.js","clipboard.min.js","bootbox.js","script.js"]
    }
  ],

  "icons": { "16": "image/24x24.png",
           "48": "image/72x72.png",
          "128": "image/114x114.png" },

  "background": {
    "scripts": ["jquery.min.js","background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "apizza - 专属极客的api管理工具",
    "default_icon": {
          "19": "image/24x24.png",
          "38": "image/72x72.png"
    }
  },

  "manifest_version": 2
}